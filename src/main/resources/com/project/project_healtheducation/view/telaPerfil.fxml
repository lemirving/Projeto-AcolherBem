<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="573.0" prefWidth="958.0" stylesheets="@../../style/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.project_healtheducation.controllers.TelaPerfilController">
    <AnchorPane layoutX="288.0" layoutY="30.0" prefHeight="513.0" prefWidth="382.0" styleClass="root_pane" stylesheets="@../style/style.css">
        <children>
            <Label fx:id="tituloLabel" layoutX="116.0" layoutY="26.0" styleClass="titulo-perfil" text="Perfil do Usuário">
                <font>
                    <Font name="System Bold" size="19.0" />
                </font>
            </Label>

            <JFXButton fx:id="editarPerfilBtn" layoutX="124.0" layoutY="450.0" onAction="#handleEditarPerfil" prefHeight="39.0" prefWidth="138.0" styleClass="botao-editar" text="Editar Perfil">
                <font>
                    <Font size="18.0" />
                </font>
            </JFXButton>

            <AnchorPane layoutX="29.0" layoutY="249.0" prefHeight="186.0" prefWidth="328.0">
                <children>
                    <Label layoutX="24.0" layoutY="14.0" text="Nome: ">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <Label fx:id="nomeValorLabel" layoutX="90.0" layoutY="14.0" text="[Nome do Usuário]">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TextField fx:id="nomeInput" layoutX="78.0" layoutY="9.0" prefHeight="31.0" prefWidth="212.0" promptText="Editar nome" />

                    <Label fx:id="emailLabel" layoutX="28.0" layoutY="63.0" prefWidth="280.0" text="Email: "> <font>
                        <Font size="18.0" />
                    </font>
                    </Label>

                    <Label fx:id="tipoLabel" layoutX="29.0" layoutY="100.0" text="Tipo:  ">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>

                    <AnchorPane fx:id="idadeContainer" layoutX="0.0" layoutY="130.0" prefHeight="40.0" prefWidth="320.0">
                        <children>
                            <Label layoutX="26.0" layoutY="5.0" text="Idade: ">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                            <Label fx:id="idadeValorLabel" layoutX="83.0" layoutY="5.0" text="[Idade do Usuário]">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                            <TextField fx:id="idadeInput" layoutX="78.0" layoutY="0.0" prefHeight="31.0" prefWidth="212.0" promptText="Editar idade" />
                        </children>
                    </AnchorPane>
                </children>
            </AnchorPane>

            <AnchorPane layoutX="126.0" layoutY="64.0" prefHeight="133.0" prefWidth="132.0">
                <children>
                    <ImageView fx:id="fotoPerfil" fitHeight="110.0" fitWidth="110.0" layoutX="10.0" layoutY="15.0" styleClass="imagem-perfil" />
                </children>
            </AnchorPane>

            <JFXButton fx:id="trocarFotoBtn" layoutX="129.0" layoutY="210.0" onAction="#handleAlterarFotoPerfil" prefHeight="39.0" prefWidth="124.0" styleClass="botao-editar" text="Trocar Foto">
                <font>
                    <Font size="18.0" />
                </font>
            </JFXButton>
        </children>
    </AnchorPane>
</AnchorPane>