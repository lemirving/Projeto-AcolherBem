<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style/cadastro.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.project_healtheducation.controllers.CadastroController">

    <children>
        <VBox fx:id="cadastroContainer" alignment="CENTER" layoutX="88.0" layoutY="30.0" prefHeight="524.0" prefWidth="229.0" spacing="20" style="-fx-background-color: #e3f8ff; -fx-padding: 25;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="88.0" AnchorPane.rightAnchor="87.0" AnchorPane.topAnchor="30.0">

            <Text fx:id="text" fill="#30475e" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Cadastre-se" />

            <VBox alignment="CENTER_LEFT" maxWidth="320" spacing="12">
                <Label fx:id="labelNome" text="Nome:">
               <font>
                  <Font size="16.0" />
               </font></Label>
                <TextField fx:id="textNome" prefWidth="300" promptText="Digite seu nome">
               <font>
                  <Font size="14.0" />
               </font></TextField>

                <Label fx:id="labelEmail" text="Email:">
               <font>
                  <Font size="16.0" />
               </font></Label>
                <TextField fx:id="textEmail" prefWidth="300" promptText="Digite seu e-mail">
               <font>
                  <Font size="14.0" />
               </font></TextField>

                <Label fx:id="labelSenha" text="Senha:">
               <font>
                  <Font size="16.0" />
               </font></Label>
                <PasswordField fx:id="textSenha" prefWidth="300" promptText="Digite sua senha">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>

                <Label fx:id="labelConfirmSenha" text="Confirmar senha:">
               <font>
                  <Font size="16.0" />
               </font></Label>
                <PasswordField fx:id="textSenhaConfirm" prefWidth="300" promptText="Repita a senha">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>

                <Label fx:id="labelIdade" text="Idade">
               <font>
                  <Font size="16.0" />
               </font></Label>
                <TextField fx:id="textIdade" prefWidth="300" promptText="Digite a sua matrícula">
               <font>
                  <Font size="14.0" />
               </font></TextField>

                <Label fx:id="labelTurma" text="Turma">
               <font>
                  <Font size="16.0" />
               </font></Label>
                <TextField fx:id="textTurma" prefWidth="300" promptText="Ex: 2B">
               <font>
                  <Font size="14.0" />
               </font></TextField>

                <Label fx:id="labelMatricula" text="Matrícula">
               <font>
                  <Font size="16.0" />
               </font></Label>
                <TextField fx:id="textMatricula" prefWidth="300" promptText="Digite a sua matrícula">
               <font>
                  <Font size="15.0" />
               </font></TextField>

                <Label style="-fx-padding: 10 0 0 0;" text="Selecione o que você é:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <HBox alignment="CENTER_LEFT" spacing="18">
                    <RadioButton fx:id="radioAluno" mnemonicParsing="false" onAction="#mostrarCampos" text="Aluno">
                  <font>
                     <Font size="13.0" />
                  </font></RadioButton>
                    <RadioButton fx:id="radioProfessor" mnemonicParsing="false" onAction="#mostrarCampos" text="Professor">
                  <font>
                     <Font size="13.0" />
                  </font></RadioButton>
                    <RadioButton fx:id="radioPsicologo" mnemonicParsing="false" onAction="#mostrarCampos" text="Psicólogo">
                  <font>
                     <Font size="13.0" />
                  </font></RadioButton>
                </HBox>
            </VBox>

            <Button onAction="#irParaHome" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;                            -fx-background-radius: 6; -fx-padding: 6 16;" text="Cadastrar">
            <font>
               <Font size="16.0" />
            </font></Button>

            <Button onAction="#voltarInicio" style="-fx-background-color: transparent; -fx-text-fill: #30475e;                            -fx-font-weight: bold;" text="Voltar" />
        </VBox>
    </children>
</AnchorPane>
