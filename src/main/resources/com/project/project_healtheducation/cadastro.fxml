<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-size: cover; -fx-background-color: #e4eff0; -fx-background-repeat: no-repeat;" stylesheets="@style/cadastro.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.project_healtheducation.controllers.CadastroController">

    <children>
        <VBox fx:id="cadastroContainer" alignment="CENTER" maxWidth="500" spacing="20" style="-fx-background-color: #e3f8ff; -fx-padding: 30; -fx-background-radius: 12;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="50.0">

            <Text fx:id="text" fill="#30475e" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Cadastre-se" />

            <VBox alignment="CENTER_LEFT" prefHeight="505.0" prefWidth="439.0" spacing="10" styleClass="formContainer">
                <Label text="Nome:" />
                <TextField fx:id="textNome" promptText="Digite seu nome completo" />

                <Label text="Email:" />
                <TextField fx:id="textEmail" promptText="Digite seu e-mail" />

                <Label text="Senha:" />
                <PasswordField fx:id="textSenha" promptText="Digite sua senha" />

                <Label text="Confirmar senha:" />
                <PasswordField fx:id="textSenhaConfirm" promptText="Confirme sua senha" />

                <Label text="Ano da Turma:" fx:id="labelAnoTurma"/>
                <TextField fx:id="textAnoTurma" promptText="Ex: 1º ano, 2º ano, etc."/>

                <Label styleClass="textRadio" text="Selecione o que você é:" />
                <HBox alignment="CENTER" spacing="20">
                    <RadioButton fx:id="radioAluno" text="Aluno" />
                    <RadioButton fx:id="radioProfessor" text="Professor" />
                    <RadioButton fx:id="radioPsicologo" text="Psicólogo" />
                </HBox>
            </VBox>

            <Button fx:id="btnCadastrar" onAction="#irParaHome" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 20;" text="Cadastrar" />

            <Button onAction="#voltarInicio" style="-fx-background-color: transparent; -fx-text-fill: #30475e; -fx-underline: true;" text="Voltar" />
        </VBox>
    </children>
</AnchorPane>
